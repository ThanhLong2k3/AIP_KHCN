{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist", // thư mục chứa file .js sau build
    "rootDir": "./", // thư mục gốc chứa file .ts
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/server.ts"],
   "exclude": ["node_modules", "dist"]
}
